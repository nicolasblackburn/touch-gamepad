    "gzip": "0.1.0",
    "http-server": "0.12.3",
    "shx": "0.3.3",
    "ts-loader": "8.0.17",
    "typescript": "4.1.5",
    "uglify-js": "3.12.8",
    "webpack": "5.23.0",
    "webpack-cli": "4.5.0"
  },
